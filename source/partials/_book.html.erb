<li class="card" id="<%= book.title.parameterize %>">
  <%= link_to book_thumbnail(image_path: book.image_url, alt: "Cover of the book “#{book.title}”, by #{book.authors.join(', ')}."), book.amazon_url, target: "_blank", rel: "sponsored nofollow noopener" %>
  <div class="card__text">
    <h3><a target="_blank" rel="sponsored nofollow noopener" href="<%= book.amazon_url %>"><%= book.title %></a></h3>
    <p class="section__meta"><%= join_authors book.authors %> <%= "&middot; #{book.published}" unless book.published.blank? %> &middot; <%= link_to "#", "##{book.title.parameterize}" %></p>
    <% if book.description.present? %>
      <div>
      <% book.description.gsub(/(<br\s?\/?>)+/, '<br>').gsub('&nbsp;', '').gsub(/(^(<br>)|(<br>)$)/, '').gsub('Val�rie', 'Valérie').split('<br>').slice(0, 5).reject { |p| p.strip.blank? }.each do |p| %>
        <p><%= p %></p>
      <% end %>
      </div>
    <% end %>
    <%= link_to "Buy&nbsp;on&nbsp;Amazon", book.amazon_url, target: "_blank", rel: "sponsored nofollow noopener", class: 'card__button' %>
  </div>
</li>
